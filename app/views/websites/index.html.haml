%h1 Your websites

%table#websites
  %thead
    %tr
      %th Fqdn
      %th Name
      %th Description
      %th
      %th
      %th

  %tbody
    - @websites.each do |website|
      %tr
        %td= website.fqdn
        %td= website.name
        %td= website.description
        %td= link_to 'Show', website
        %td= link_to 'Edit', edit_website_path(website)
        %td= link_to 'Destroy', website, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Website', new_website_path

:javascript
  $(function() {
    $('#websites').dataTable({
      "bJQueryUI": true,
      "bPaginate": false,
      "bLengthChange": false,
      "bFilter": false,
      "bSort": false,
      "bInfo": false
    });
  });
